<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Simulate a bottom-only line by drawing a shape and moving all other sides out of drawing boundaries -->
    <!--  Taken from: https://stackoverflow.com/questions/37676014/android-tablayout-how-to-make-two-underlines -->
    <item android:top="-4dp" android:right="-4dp" android:left="-4dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="@color/account_tab_group_underline" />
        </shape>
    </item>
</layer-list>
