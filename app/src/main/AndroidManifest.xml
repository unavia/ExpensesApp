<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ca.kendallroth.expensesapp">

    <application
        android:name="ca.kendallroth.expensesapp.ExpensesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ca.kendallroth.expensesapp.activities.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="ca.kendallroth.expensesapp.activities.RequestPasswordResetActivity">
        </activity>
        <activity android:name="ca.kendallroth.expensesapp.activities.ResetPasswordActivity">
        </activity>
        <activity android:name="ca.kendallroth.expensesapp.activities.SettingsActivity">
        </activity>
        <activity
            android:name="ca.kendallroth.expensesapp.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>